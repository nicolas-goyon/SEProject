<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="400.0" prefWidth="569.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.SEApp.app.controller.MemberController">
    <VBox>
        <HBox alignment="TOP_CENTER" prefHeight="47.0" prefWidth="570.0">
            <fx:include source="../components/Header.fxml" />
        </HBox>
        <HBox alignment="CENTER" prefHeight="20.0" prefWidth="570.0" stylesheets="@../Style/main.css">
            <Label styleClass="h1" text="Members management" />
        </HBox>
        <ToolBar accessibleRole="BUTTON" prefHeight="40.0" prefWidth="200.0">
            <Button mnemonicParsing="false" onAction="#handleHomeButton" style="-fx-background-color: #24C7E6;;" text="Home" />
            <Button mnemonicParsing="false" onAction="#handleNewButton" style="-fx-background-color: A3E270;" text="New" />
        </ToolBar>
        <ScrollPane fx:id="displayPane" prefHeight="490.0" prefWidth="800.0" />
    </VBox>

    <VBox fx:id="formModal" alignment="CENTER" prefHeight="400.0" prefWidth="543.0" stylesheets="@../Style/main.css" visible="false">
        <HBox alignment="CENTER" prefHeight="331.0" prefWidth="554.0">
            <VBox prefHeight="331.0" prefWidth="387.0" styleClass="modal">
                <HBox fx:id="idArea" prefHeight="100.0" prefWidth="200.0">
                    <Label text="MemberID ID : " />
                    <Label fx:id="id" text="1" />
                </HBox>
                <VBox fx:id="nameArea" prefHeight="74.0" prefWidth="387.0" styleClass="formControl">
                    <Label text="Member Name" />
                    <TextField fx:id="name" prefHeight="21.0" prefWidth="375.0" />
                </VBox>
                <VBox fx:id="emailArea" prefHeight="74.0" prefWidth="387.0" styleClass="formControl">
                    <Label text="Member Email" />
                    <TextField fx:id="email" prefHeight="21.0" prefWidth="375.0" />
                </VBox>

                <VBox fx:id="passwordArea" prefHeight="74.0" prefWidth="387.0" styleClass="formControl">
                    <Label text="Member Password" />
                    <PasswordField fx:id="password" prefHeight="21.0" prefWidth="375.0" />
                </VBox>

                <VBox fx:id="confirmPasswordArea" prefHeight="74.0" prefWidth="387.0" styleClass="formControl">
                    <Label text="Confirm Member Password" />
                    <PasswordField fx:id="confirmPassword" prefHeight="21.0" prefWidth="375.0" />
                </VBox>


                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <Button mnemonicParsing="false" onAction="#handleMemberCreation" text="Add" />
                    <Button mnemonicParsing="false" onAction="#handleMemberUpdate" text="Update" />
                    <Button mnemonicParsing="false" onAction="#closeModal" text="Cancel" />
                </HBox>

                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <Label fx:id="message" text="Message" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</StackPane>
