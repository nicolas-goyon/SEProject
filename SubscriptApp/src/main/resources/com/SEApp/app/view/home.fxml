<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.SEApp.app.controller.HomeController">
    <fx:include source="../components/Header.fxml" />


    <!--  All User logged  -->
        <VBox fx:id="allUserLoggedZone" alignment="TOP_RIGHT">
            <Button fx:id="logOffButton" mnemonicParsing="false" onAction="#handleLogOffButton" style="-fx-background-color: #FF0020;" text="Logout" />
        </VBox>



    <!--  User logged  -->
    <VBox fx:id="memberLoggedZone" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" visible="false">
        <Button fx:id="subscriptionsButton" mnemonicParsing="false" onAction="#handleSubscriptionsButton" style="-fx-background-color: #FFA60E;" text="My Subscriptions" />
    </VBox>


    <!--  5 button zones : Not logged, All User logged , Member logged, Admin Logged, Manager Logged  -->

    <!--  Not logged  -->
    <VBox fx:id="notLoggedZone" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" visible="true">
        <MenuButton mnemonicParsing="false" style="-fx-background-color: #24C7E6;" text="Login">
            <items>
                <MenuItem fx:id="loginMemberMenuItem" mnemonicParsing="false" onAction="#handleLoginMemberButton" text="Login as Member" />
                <MenuItem fx:id="loginManagerMenuItem" mnemonicParsing="false" onAction="#handleLoginManagerButton" text="Login as Manager" />
                <MenuItem fx:id="loginAdminMenuItem" mnemonicParsing="false" onAction="#handleLoginAdminButton" text="Login as Admin" />
            </items>
        </MenuButton>
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterButton" style="-fx-background-color: #86D174;" text="Register" />
    </VBox>
   
   
       <!--  Manager logged  -->
       <VBox fx:id="managerLoggedZone" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" visible="false">
           <Button fx:id="plansButton" mnemonicParsing="false" onAction="#handlePlansButton" text="Plans Management" />
           <Button fx:id="membersButton" mnemonicParsing="false" onAction="#handleMembersButton" text="Members management" />
           <Button fx:id="paymentTypeButton" mnemonicParsing="false" onAction="#handlePaymentTypeButton" text="Types of Payment" />
           <Button mnemonicParsing="false" onAction="#handleAccessButton" text="Access Management" />
           <Button mnemonicParsing="false" onAction="#handlePlanAccessButton" text="Plan Access Management" />
       </VBox>


    <!--  Admin logged  -->
    <VBox fx:id="adminLoggedZone" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" visible="false">
        <Button fx:id="managersButton" mnemonicParsing="false" onAction="#handleManagersButton" text="Managers" />
    </VBox>

</VBox>
